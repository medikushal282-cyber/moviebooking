        .glow::before {
            content: "";
            z-index: -2;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(60deg);
            position: absolute;
            width: 999px;
            height: 999px;
            background-repeat: no-repeat;
            background-image: conic-gradient(#000, #402fb5 5%, #000 38%, #000 50%, #cf30aa 60%, #000 87%);
            transition: all 2s;
        }

        @keyframes rotate {
            100% {
                transform: translate(-50%, -50%) rotate(450deg);
            }
        }

        /* --------------------------------------------------------
   CHIPS & GRID
-------------------------------------------------------- */
        .chip-list {
            display: flex;
            gap: 0.45rem;
            flex-wrap: wrap;
        }

        .chip {
            padding: 0.35rem 0.6rem;
            border-radius: 999px;
            background: transparent;
            border: 1px solid rgba(255, 255, 255, 0.06);
            cursor: pointer;
            transition: box-shadow 150ms ease, border-color 150ms ease, background-color 150ms ease;
            color: #e6eef6;
            font-size: .9rem;
            -webkit-tap-highlight-color: transparent;
        }

        .chip:focus {
            outline: none;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.06);
        }

        /* Selected chips use an outline-style highlight instead of a pressed-down effect */
        .chip.active {
            background: rgba(255, 255, 255, 0.02);
            border-color: rgba(59, 130, 246, 0.95);
            /* blue-ish accent */
            box-shadow: 0 0 0 6px rgba(59, 130, 246, 0.10);
            transform: none;
        }

        /* Prevent visual "press down" on click - keep selection via .active only */
        .chip:active {
            transform: none;
        }

        .movies-grid {
            display: grid;
            gap: 1rem;
            grid-template-columns: repeat(4, 1fr);
        }

        @media(max-width:1024px) {
            .movies-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @media(max-width:768px) {
            .movies-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media(max-width:640px) {
            .movies-grid {
                grid-template-columns: repeat(1, 1fr);
            }
        }

        .section-title h3 {
            font-size: 1.2rem;
            font-weight: 800;
        }

        /* small responsive tweak for filter fields in right area */
        .filter-right .filter-field {
            display: inline-block;
            margin-left: 0.4rem;
            background: transparent;
            border: none;
            color: #e6eef6;
            padding: 6px 10px;
            border-radius: 8px;
            box-sizing: border-box;
        }

        /* filter button styles (replaces native selects) */
        .filter-btn {
            background: transparent;
            color: #e6eef6;
            border: 1px solid rgba(255, 255, 255, 0.06);
            padding: 6px 10px;
            border-radius: 8px;
            cursor: pointer;
            margin-right: 0.25rem;
            transition: box-shadow 150ms ease, border-color 150ms ease, background-color 150ms ease;
        }

        .filter-btn.active {
            background: rgba(255, 255, 255, 0.02);
            border-color: rgba(59, 130, 246, 0.95);
            box-shadow: 0 0 0 6px rgba(59, 130, 246, 0.08);
        }

        .btn-group {

            .dropdown-menu[hidden] {
                display: none;
            }

            /* utility */
            .opacity-50 {
                opacity: 0.5;
            }

            /* make sure images inside cards don't show beyond radius on some browsers */
            .movie-card img {
                display: block;
                border-radius: 12px 12px 0 0;
            }
    </style>
